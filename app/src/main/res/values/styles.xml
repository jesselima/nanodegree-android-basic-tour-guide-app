<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:backgroundTint">@color/buttonAlertBackground</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="cardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin8</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textColorCardHighlights</item>
        <item name="android:backgroundTint">@color/colorAlpha0</item>
        <item name="android:textSize">@dimen/text_size_sub_heading_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin8</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textColorCardHighlights</item>
        <item name="android:textSize">@dimen/text_size_sub_heading_16</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="cardContentAlignment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="cardGenres">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin8</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin16</item>
        <item name="android:layout_marginRight">@dimen/layout_margin16</item>
    </style>

    <style name="cardGenresLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/layout_margin8</item>
        <item name="android:layout_weight">2</item>
        <item name="android:backgroundTint">@color/textColorBlack</item>
    </style>

    <style name="cardHighlights">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin16</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin8</item>
        <item name="android:layout_marginTop">@dimen/layout_margin8</item>
        <item name="android:layout_marginRight">@dimen/layout_margin8</item>
        <item name="android:backgroundTint">@color/cardBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
