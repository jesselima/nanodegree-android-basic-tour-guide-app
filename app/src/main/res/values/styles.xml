<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Titles text. -->
    <style name="textTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin8</item>
        <item name="android:layout_marginStart">@dimen/layout_margin8</item>
        <item name="android:layout_marginTop">@dimen/layout_margin8</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- SubTitle text. -->
    <style name="textSubTitle" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin8</item>
        <item name="android:layout_marginStart">@dimen/layout_margin8</item>
        <item name="android:layout_marginTop">@dimen/layout_margin8</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Body text. -->
    <style name="textBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin8</item>
        <item name="android:layout_marginStart">@dimen/layout_margin8</item>
        <item name="android:layout_marginTop">@dimen/layout_margin8</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <!-- MainActivity - Gallery Image -->
    <style name="gallery_image" parent="CardView">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- MainActivity - Gallery Text (Overlay text) -->
    <style name="gallery_image_text" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@color/color_bg_white_alpha</item>
        <item name="android:padding">@dimen/margin_4</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonCallToAction" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin8</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
